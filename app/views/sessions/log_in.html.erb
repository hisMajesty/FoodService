<div class="login-form-container">
    <%= form_tag sessions_path do %>
        <p>
          <%= text_field_tag :login, params[:login], :placeholder => 'login' %>
        </p>
        <p>
          <%= password_field_tag :password, nil, :placeholder => 'password' %>
        </p>
        <p class='button'><%= submit_tag 'Let me in!' %></p>
    <% end %>
</div>